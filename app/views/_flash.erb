<% if flash["notice"] %>
  <div class="alert alert-success alert-dismissible fade show" data-turbo-cache="false" role="alert">
    <%= flash["notice"] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if flash["error"] %>
  <div class="alert alert-danger alert-dismissible fade show" data-turbo-cache="false" role="alert">
    <%= flash["error"] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>