<div class="article">
  <h1><%= @article.title %></h1>
  <div class="body mt-5">
    <h5><%= @article.body %></h5>
  </div>
  <div class="timestamps mt-5">
    <% if @article.updated_at > @article.created_at %>
      <p>Modifié le : <%= @article.updated_at.strftime("%d/%m/%Y à %H:%M") %></p>
    <% else %>
      <p>Publié le : <%= @article.created_at.strftime("%d/%m/%Y à %H:%M") %></p>
    <% end %>
  </div>
  <p><%= link_to "Retour à la liste des articles", articles_path %></p>
</div>
